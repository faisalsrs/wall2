@model Login
<h3>Login</h3>
<form asp-action="login" asp-controller="Home" method="post">
  <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="lemail"></span>
        <label asp-for="lemail">Email address</label>
        <input asp-for="lemail" class="form-control" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">Login Now!</small>
  </div>
  <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="lpassword"></span>
        <label asp-for="lpassword">Password</label>
        <input asp-for="lpassword" type="password" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-success">Login</button>
</form>